---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Contact from '../components/Contact.astro';
import Portrait from '../components/Portrait.astro';
import Footer from '../components/Footer.astro';
const stark1024 = 'stark1024.jpg';
const gmm_screenshot_1 = 'gmm_screenshot_1.jpg';
const github_profile_1 ='github_profile_1.jpg'
const cv_1 ='cv_1.jpg'
const customPortfolio_screenshot_1 ='customPortfolio_screenshot_1.jpg'
const pdf = 'ammartahacv.pdf';
---

<Layout title="Welcome to My Website.">
	<div class="custom-svg-bg pb-20">
		<main>			
			<h1 class="pt-10 custom-text-gradient">Ammar Taha: Web Dev</h1>
			<h1 class="pt-10">Welcome to <span class="custom-text-gradient">My Personal Website</span></h1>
			<div class="flex justify-between pb-16">
				<Portrait 
					image={stark1024}
				/>
				<Contact 
  				email="a.taha5200@gmail.com" 
  				tel="+41784016950"
  				address="Dietikon, Zürich"
				/>
			</div>
			<p class="custom-intro">
				Hi, I'm <strong>Ammar Taha</strong>, a recent CS graduate and web dev, listed below are some of my projects and CV. <br>
				Skills: Html, CSS/tailwindcss, JS/TS, React, Nextjs, Astro 
			</p>
			
			<ul role="list" class="custom-link-card-grid">
				<Card
					href="https://github.com/stark5200/"
					title="Github Profile"
					body="My Personal Github Profile."
					image={github_profile_1}
				/>
				<Card
					href="https://gmm-ahmed.vercel.app/"
					title="Green Marmot Website"
					body="Custom website for Green Marmot Capsule hotel based in Zürich."
					image={gmm_screenshot_1}
				/>
				<Card
					href={pdf}
					title="My CV"
					body="Here is a look at my cv."
					image={cv_1}
				/>
				<Card
					href="https://github.com/stark5200/customPortfolio/"
					title="This Website "
					body="Here you can find the repo for this website made with Astro."
					image={customPortfolio_screenshot_1}
				/>
			</ul>
		</main>
	</div>
	<Footer />
</Layout>

<script src="https://cdn.jsdelivr.net/npm/kute.js@2.2.4/dist/kute.min.js" integrity="sha256-ekq8UIBrOC1lgaJmRRV/c50s5Hy/EBKjBD/7nM9dvp0=" crossorigin="anonymous">
	
	const tween = KUTE.fromTo(
          '#blob1', 
          {path: '#blob1'},
          {path: '#blob2'}, 
          {repeat: 999, duration: 3000, yoyo: true, easing: 'easingQuadraticInOut' }
        )
        tween.start()
</script>

